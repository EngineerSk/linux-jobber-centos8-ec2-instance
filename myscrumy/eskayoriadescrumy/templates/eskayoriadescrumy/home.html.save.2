<style>
    table, td, tr{
      border:1px solid red;
      border-collapse:collapse;
    }
</style>

<table> 
   <thead>
      <tr>
        <td>
          User
        </td>
        <td>
          Weekly Goals
        </td>
        <td>
          Daily Goals
        </td>
        <td>
          Verify Goals
        </td>
        <td>
          Done Goals
        </td>
      </tr>
   </thead>
   <tbody>
      <tr>
        <td> {{ goal.user.first_name }}</td>
        {% if 'Weekly' in goal.goal_status.status_name %} 
        <td> {{ goal.goal_name }} {{ goal.goal_id }} </td>
        {% else %}
        <td>----</td>
        {% endif %}
        {% if 'Daily' in goal.goal_status.status_name %}
        <td> {{ goal.goal_name }} {{ goal.goal_id }} </td>
       	{% else %}
       	<td>----</td>
       	{% endif %}
        {% if 'Verify' in goal.goal_status.status_name %}
        <td> {{ goal.goal_name }} {{ goal.goal_id }} </td>
       	{% else %}
       	<td>----</td>
       	{% endif %}
        {% if 'Done' in goal.goal_status.status_name %}
        <td> {{ goal.goal_name }} {{ goal.goal_id }} </td>
       	{% else %}
       	<td>----</td>
       	{% endif %}

      </tr>

   </tbody>
</table>
