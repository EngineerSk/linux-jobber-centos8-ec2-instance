<!DOCTYPE html>
<html>
  <head>
    <style>
      table, thead, tbody{
        border:1px solid red;
      }
    </style>
  </head>
  <body>

   <table> 
     <thead>
      <tr>
        <th>
          User
        </th>
        <th>
          Weekly Goals
        </th>
        <th>
          Daily Goals
        </th>
        <th>
          Verify Goals
        </th>
        <th>
          Done Goals
        </th>
      </tr>
    </thead>
    <tbody>
      {% if scrumy_goals is not None %}
      {% if users is not None %}
      {% for user in users %}
      {% for goal in scrumy_goals %}
      {% if user.scrumygoals.relatedname is goal.user.related_name and %}
      <tr>
        <td> user.username </td>
        {% if goal in weekly_goals %}
        <td>{{ goal.goal_name }} {{ goal.goal_id }}</td>
        {% else %}
        <td>----</td>
        {% endif %}
        {% if goal in daily_goals %}
       	<td>{{ goal.goal_name }} {{ goal.goal_id }}</td>
        {% else %}
       	<td>----</td>
	{% endif %}
        {% if goal in verify_goals %}
       	<td>{{ goal.goal_name }} {{ goal.goal_id }}</td>
        {% else %}
       	<td>----</td>
	{% endif %}
        {% if goal in done_goals %}
       	<td>{{ goal.goal_name }} {{ goal.goal_id }}</td>
        {% else %}
       	<td>----</td>
	{% endif %}
      </tr>
      {% endif %}
      {% endfor %}
      {% endfor %}
      {% endif %}
      {% endif %}
    </tbody>
   </table>
  </body>
</html>
